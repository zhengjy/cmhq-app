view, scroll-view, swiper-item {
  display: flex;
  flex-direction: column;
  flex-shrink: 0;
  flex-grow: 0;
  flex-basis: auto;
  align-items: stretch;
  align-content: flex-start;
}
.u-dropdown__menu {
  display: flex;
  flex-direction: row;
}
.u-dropdown__menu__item {
  flex: 1;
  display: flex;
  flex-direction: row;
  justify-content: center;
}
.u-dropdown__menu__item__content {
  display: flex;
  flex-direction: row;
  align-items: center;
}

